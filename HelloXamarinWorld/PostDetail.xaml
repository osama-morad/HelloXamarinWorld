<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloXamarinWorld.PostDetail">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="experienceEntry" />
            <Button x:Name="updatePost" Text="Update"
                    Clicked="updatePost_Clicked" />
            <Button x:Name="deletePost" Text="Delete"
                    Clicked="deletePost_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>